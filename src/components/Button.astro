---
import type { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"button"> {}
const { class: classList, ...attrs } = Astro.props
---

<button
	class:list={[
		"flex items-center gap-2 rounded-md border-2 border-neutral-600 px-4 py-1 ring-lime-600 ring-offset-2 ring-offset-neutral-200 outline-hidden hover:border-lime-700 hover:text-lime-700 hover:shadow-sm hover:shadow-lime-500/50 focus:ring-2",
		classList
	]}
	{...attrs}
>
	<slot />
</button>
