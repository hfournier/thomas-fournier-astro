---
import { Image } from "astro:assets"

import headshot_1 from "@assets/hero/headshot-1.jpg"
import headshot_2 from "@assets/hero/headshot-2.jpg"
import headshot_3 from "@assets/hero/headshot-3.jpg"
---

<div id="caroussel" class="grid grid-cols-1 grid-rows-1 overflow-x-hidden">
	<Image
		class="col-start-1 row-start-1 animate-slide1"
		src={headshot_1}
		alt="Thomas Fournier headshot #1"
		loading={"eager"}
		sizes={"(min-width: 1280px) 1280px, 100vw"}
		widths={[360, 396, 432, 768, 1024, 1280]}
	/>
	<Image
		class="col-start-1 row-start-1 -translate-x-full animate-slide2"
		src={headshot_2}
		alt="Thomas Fournier headshot #2"
		loading={"eager"}
		sizes={"(min-width: 1280px) 1280px, 100vw"}
		widths={[360, 396, 432, 768, 1024, 1280]}
	/>
	<Image
		class="col-start-1 row-start-1 translate-x-full animate-slide3"
		src={headshot_3}
		alt="Thomas Fournier headshot #3"
		loading={"eager"}
		sizes={"(min-width: 1280px) 1280px, 100vw"}
		widths={[360, 396, 432, 768, 1024, 1280]}
	/>
	<div
		class="caroussel-text z-10 col-start-1 row-start-2 flex flex-col items-center justify-center gap-2 py-8 sm:row-start-1 sm:items-start sm:px-10 sm:py-0 md:px-20 lg:gap-4 lg:px-32 xl:gap-6 xl:px-44">
		<h1
			class="w-fit font-josefin text-2xl text-neutral-100 sm:animate-slide-text sm:font-medium md:font-semibold lg:font-bold">
			Thomas Fournier
		</h1>
		<h2
			class="flex w-fit flex-col font-josefin text-lg text-neutral-50 sm:animate-slide-text md:font-medium">
			<span class="">Actor | Singer | Director</span>
			<span
				class="flex w-full items-center justify-between self-center tracking-[.25em] before:h-[3px] before:w-8 before:bg-neutral-50 after:h-[3px] after:w-8 after:bg-neutral-50"
				>Storyteller</span
			>
		</h2>
		<div class="mt-4 w-fit sm:animate-slide-text">
			<a
				class="max-w-fit rounded border border-neutral-100 px-4 py-2 text-sm text-neutral-50 hover:bg-neutral-300 hover:text-neutral-900 hover:shadow-lg hover:shadow-neutral-300/30 md:font-medium"
				href="#contact">Contact Me</a
			>
		</div>
	</div>
</div>

<style>
	#caroussel:hover > *,
	#caroussel:hover > div > * {
		animation-play-state: paused;
	}

	.caroussel-text {
		container-type: inline-size;
	}
</style>
